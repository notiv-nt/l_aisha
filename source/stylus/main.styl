
@import 'vendor/_normalize'
@import 'vendor/_grid'
@import 'vendor/_animate'
@import '_util'
@import '_base'
@import '_fonts'



.header
	@extend .clearfix

	padding 40px 0 20px 0
	position absolute
	top 0
	left 0
	right 0
	width 100%
	z-index 3

	a
		display inline-block
		vertical-align middle

	button.toggle
		float right
		display none
		margin-top -6px

	.logo
		a
			padding 3px 0

	.nav
		text-align right

		a
			color white
			transit color, background-color
			text-transform uppercase
			font-size .9em
			padding 4px 10px
			font-weight 600

			&:hover, &.active
				color main-color



.banner, .story, .expierence
	background-color #9b9a95
	background-size cover
	background-repeat no-repeat
	position relative

	.row
		z-index 2
		position relative



.banner
	color #fff
	padding 200px 0
	min-height 100%
	background-image url('../img/banner.jpg')

	h1
		margin-bottom 25px

	p
		font-size 1.25em
		line-height 1.8em
		margin-bottom 10px
		font-weight 300



.features
	background-color #FFF

	.box-content
		text-align center

	.item
		padding 30px 15px

		&.touch .inner:before
			background-position 2px 0
		&.solution .inner:before
			background-position -62px 2px
		&.promotion .inner:before
			background-position -124px 2px

		.inner
			text-align center
			border 2px solid #f2f2f2
			padding 50px 25px 20px
			position relative

			&:before
				content ''
				width 64px
				height @width
				position absolute
				top (@width/2 * -1)
				left 0
				right 0
				margin auto
				display block
				background-color main-color
				border-radius 50%
				background-image url('../img/features.png')
				background-repeat no-repeat
				background-position 62px 0

		h3
			margin-bottom 15px
			text-transform uppercase
			font-size 1.125em
			font-weight bold

		p
			font-weight 600



.story, .expierence
	position relative

	h2
		margin-bottom 36px

	p
		margin-bottom 25px
		line-height 1.7em

	.button-block
		padding-top 20px



.story
	color #444
	background-image url('../img/story.jpg')
	background-position center right

	.overlay
		background-color rgba(0, 0, 0, 0)



.clients
	background-color #fff
	color #444

	.review
		padding 15px

	.review_content
		padding 22px 26px
		border 2px solid #dedede
		margin-bottom 15px
		position relative

		&:after, &:before
			content ''
			position absolute
			display block
			right 24px
			border-left 9px solid transparent
			border-right 9px solid transparent

		&:before
			border-top 7px solid #dedede
			bottom -7px

		&:after
			border-top 7px solid #fff
			bottom -5px

		p
			font-size 1.25em
			line-height 1.4em

	.review_author
		w = 70px

		display table
		width 100%

		h4, p
			line-height 1.1em

		h4
			color black
			font-size 1.125em

		p
			color #666

		.text, .image
			display table-cell
			vertical-align middle

		.text
			margin-right w
			text-align right
			padding-right 15px

		.image
			width w
			height w
			padding 5px
			margin-left (w * -1)

			a
				display block
				width 100%
				height 100%
				border-radius 50%
				overflow hidden
				background-color #989898

				img
					display block
					max-width 100%
					max-height 100%



.expierence
	background-image url('../img/expierence.jpg')
	color #fff

	.overlay
		background-color rgba(0, 0, 0, .7)

	.desc
		padding-right 50px

	.skill
		margin-bottom 25px

		&:last-of-type
			margin-bottom 0

		span.label
			display block



.blog
	background-color #fff
	color #444

	.box-content
		text-align center

	.item
		padding 15px
		text-align left

	.picture, h3, .info
		margin-bottom 15px

	.picture
		background-color #989898
		overflow hidden

		&:hover img
			transform scale(1.05)

		&, & img
			display block

		img
			width 100%
			height auto
			transit transform

	.desc
		padding 15px

		h3
			color black
			font-size 1.125em
			font-weight bold
			line-height 1em

	.info
		@extend .clearfix

		.date, .comment
			display block
			width 50%
			float left
			color #999
			font-size 0.875em
			line-height 1em

			&:before
				content ''
				display inline-block
				vertical-align middle
				width 18px
				height 18px
				margin-right 5px
				background url('../img/blog-icons.png') no-repeat

		.date:before
			background-position -18px 0

		.comment:before
			background-position 0 0



.ready, .footer
	padding 50px 0


.ready
	color #fff
	background-color main-color

	.text, .button
		vertical-align middle

	.text
		h3
			font-size 1.5em
			line-height 1.2em

	.button
		text-align right



.footer
	background-color #232323
	color #fff
	padding-bottom 30px

	.item
		margin-bottom 20px
		vertical-align middle
		padding 0 10px

	a.logo
		display block

	h3
		font-size 1em
		margin-bottom 12px
		font-weight bold
		text-transform uppercase

	p
		font-size .875em
		margin-bottom 25px

		&.addr
			margin-bottom 0



@import '_media'